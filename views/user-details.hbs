<div class="p-5 d-flex flex-column gap-5 fullpage">
    <div>
        <a href="/add-user" class="btn border-primary btn-white text-primary ">&lt Back</a>
    </div>

    <div class="table">
        <div class="d-flex flex-column w-100 ">
            <div class=" w-100 table-head" style="background: linear-gradient(0deg, #CDCDCD, #CDCDCD),linear-gradient(0deg, #FFFFFF, #FFFFFF); font-size: 1.2rem;">
                <div class=" p-3 border border-dark w-100">user Id</div>
                <div class="p-3 border border-dark w-100">name</div>
            </div>
            {{#each user}}
            <div class="d-flex flex-row  w-100 justify-content-around bg-white">
                <div class="p-4 border border-dark w-100 ">{{this.userId}}</div>
                <div class="p-4 border border-dark w-100 ">{{this.name}}</div>
            </div>
            {{/each}}
        </div>

        <div class="d-flex flex-column w-100 ">
            <div class=" w-100 table-head" style="background: linear-gradient(0deg, #CDCDCD, #CDCDCD),linear-gradient(0deg, #FFFFFF, #FFFFFF); font-size: 1.2rem;">
                <div class=" p-3 border border-dark w-100">Photo</div>
                <div class="p-3 border border-dark w-100">name</div>
            </div>
            {{#each user}}
            <div class="d-flex flex-row  w-100 justify-content-around bg-white">
                <div class="p-3 border border-dark w-100">
                    <img src="/image/{{this._id}}.webp" width="50px" height="40px" alt="">
                </div>
                <div class="p-3 border border-dark w-100">
                    {{#if this.accept}}

                    {{else}}
                    <a href="accept-user/{{this._id}}" class="btn btn-primary">Done</a>
                    {{/if}}
                    <a href="delete-user/{{this._id}}" class="btn border-primary btn-white text-primary">Delete</a>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
    {{#each user}}
    <div class="table2">
        <div class="d-flex flex-column w-100 ">
            <div class=" w-100 table-head2" style="background: linear-gradient(0deg, #CDCDCD, #CDCDCD),linear-gradient(0deg, #FFFFFF, #FFFFFF); font-size: 1.2rem;">
                <div class=" p-3 border  w-100">{{this.userId}}</div>
                <hr>
                <div class="p-3 border  w-100">{{this.name}}</div>
            </div>
            <div class="d-flex flex-row  w-100 justify-content-around bg-white">
                <div class="p-4  w-100 "><span class="me-2">Photo:</span> <img src="/image/{{this._id}}.webp" width="50px" height="40px" alt=""></div>
                <div class="p-4  w-100 d-flex flex-column">
                    <span class="me-2">Action</span>
                    <div class="d-flex flex-row">
                        {{#if this.accept}}

                    {{else}}
                    <a href="accept-user/{{this._id}}" class="btn btn-primary w-50">Done</a>
                    {{/if}}
                    <a href="delete-user/{{this._id}}" class="btn border-primary btn-white text-primary w-50">Delete</a>
                    </div>
                </div>

            </div>

         
            </div>
            {{/each}}




        </div>

        <style>
            .table2 {
                display: none;
            }

            .table-head {
                display: flex;
                flex-direction: row;
                justify-content: space-around;

            }
            .table-head2 {
                display: flex;
                flex-direction: row;
                justify-content: space-around;
                border: solid 2px;

            }

            .table {
                display: flex;
                flex-direction: row;

            }

            @media screen and (max-width:770px) {
                .table {

                    display: none;
                    flex-direction: column;
                    gap: 1rem;
                }
                hr{
                    height: 70%;
                    background-color: black;
                    align-self: center;
                    padding: 1px;
                }

                .table2 {
                    display: flex;
                    flex-direction: column;
                    gap: 1rem;
                 
                }
                .fullpage{
                    background-color: #e5e5e5;
                    height: 100vh;

                }

            }
        </style>