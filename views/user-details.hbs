                    <span class="me-2">Action</span>
                    <div class="d-flex flex-row gap-1">
                        {{#if this.accept}}

                        {{else}}
                        <form accept="/accept-user" method="post" class="w-100">

                            <input type="submit" class="btn btn-primary w-100" name="" id="" value="Done">
                        </form>
                        {{/if}}
                        <a href="delete-user/{{this._id}}"
