<div class="p-5 d-flex flex-column gap-5 fullpage">
    <div>
        <a href="/add-user" class="btn border-primary btn-white text-primary ">&lt Back</a>
    </div>

    <div class="table">
        <div class="d-flex flex-column w-100 ">
            <div class=" w-100 table-head"
                style="background: linear-gradient(0deg, #CDCDCD, #CDCDCD),linear-gradient(0deg, #FFFFFF, #FFFFFF); font-size: 1.2rem;">
                <div class=" p-3 border border-dark w-100">user Id</div>
                <div class="p-3 border border-dark w-100">name</div>
            </div>
            {{#each user}}
            <div class="d-flex flex-row  w-100 justify-content-around bg-white">
                <div class="p-4 border border-dark w-100 ">{{this.userId}}</div>
                <div class="p-4 border border-dark w-100 ">{{this.name}}</div>
            </div>
            {{/each}}
        </div>

        <div class="d-flex flex-column w-100 ">
            <div class=" w-100 table-head"
                style="background: linear-gradient(0deg, #CDCDCD, #CDCDCD),linear-gradient(0deg, #FFFFFF, #FFFFFF); font-size: 1.2rem;">
                <div class=" p-3 border border-dark w-100">Photo</div>
                <div class="p-3 border border-dark w-100">name</div>
            </div>
            {{#each user}}
            <div class="d-flex flex-row  w-100 justify-content-around bg-white">
                <div class="p-3 border border-dark w-100">
                    <img src="/image/{{this._id}}.webp" width="50px" height="40px" alt="">
                </div>
                <div class="p-3 border d-flex flex-row g-2 border-dark w-100">
                    {{#if this.accept}}
                    <div></div>
                    {{else}}
                    <form action="/accept-user/{{this._id}}" method="post" class="w-50">

                            <input type="submit" class="btn btn-primary w-75" name="" id="" value="Done">
                        </form>
                    {{/if}}
                    <div class="w-50">
                        <a href="delete-user/{{this._id}}" class="btn border-primary btn-white text-primary w-75">Delete</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
    {{#each user}}
